<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Αν το αρχείο ή ο φάκελος υπάρχει, σέρβιρέ το κανονικά (π.χ. εικόνες, css, js, php)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Αλλιώς, στείλε τα όλα στο index.html για να τα αναλάβει το React
  RewriteRule ^ index.html [L]
</IfModule>

# Deny direct access to app directory
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>
<FilesMatch "\.(sql|env|ini|log)$">
  Require all denied
</FilesMatch>

